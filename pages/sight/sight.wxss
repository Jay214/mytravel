/* pages/sight/sight.wxss */
.container{
  margin-bottom: 100rpx;
}
.addr{
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.swiper{
 padding: 20rpx;
}
.sign, .title{
  font-size: 40rpx;
}
.bright{
  font-size: 34rpx;
  /* background: rgb(151, 253, 185); */
  background: #e287a7;
  color: white;
  padding: 30rpx;
  margin: 20rpx;
  position: relative;
  border-radius: 5px;
  border-top-left-radius: 0;
}
.bright::after{
  content: "";
  height: 0px;
  width: 0px;
  border-right: 86rpx solid transparent;
  border-top: 56rpx solid #00a7e1;
  position: absolute;
  left: 0;
  top: 0;
}
.text, .detailcon_text{
  font-size: 30rpx;
  padding: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px dashed rgb(199, 198, 198);
}
.detailcon{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.tip{
  padding: 20rpx 0;
  font-size: 34rpx;
}
.tip .iconfont{
  font-size: 40rpx;
  vertical-align: middle;
  font-weight: 900;
  color: #000;
}
.tips{
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow:0px -4px 10px -4px #c2c1c1;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  padding: 16rpx 0;
  background: white;
}
.tab{
  flex: 1;
  border-left: 1px solid lightgrey;
  text-align: center;
}
.inner{
  font-size: 28rpx;
}
.icon-shoucang{
  font-size: 40rpx;
}
.tab:first-child{
  border: none;
}
.share{
  border-radius: 70rpx;
  height: 70rpx;
  width: 140rpx;
  line-height: 70rpx;
  padding: 0;
  background: #75adff;
  color: white;
}
.desc_all{
  line-height: 50rpx;
}