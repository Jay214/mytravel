/* pages/answer/answer.wxss */
.container{
  margin-bottom: 30px;
}
.content{
  padding: 40rpx 20rpx;
  /* background: #5bce5a; */
  background: #3c8dbc;
  color: white;
  border-radius: 5px;
  margin-bottom: 28rpx;
}
.title{
  font-size: 40rpx;
  padding-bottom: 16rpx;
}
.description{
  font-size: 30rpx;
}
.author{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 10px;
  font-size: 32rpx;
  border-bottom: 1px solid lightgrey;
}
.address{
  font-size: 32rpx;
  flex: 1;
  text-align: right;
}
.answer{
  padding: 30rpx 0;
  border-bottom: 1px solid lightgrey;
}
.info{
  font-size: 24rpx;
}
.user{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.user image, .author image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 15px;
  border-radius: 50%;
}
.msg{
  font-size: 28rpx;
  position: relative;
}
.zan{
  position: absolute;
  right: 0;
  bottom: 0;
}
.answer_content{
  font-size: 30rpx;
  padding-bottom: 20rpx;
}

.tips{
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow:0px -4px 10px -4px #c2c1c1;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  padding: 16rpx 0;
  background: white;
}
.tab{
   flex: 1;
  text-align: center;
}
.tab:first-child{
  flex: 3;
}
.inner{
  font-size: 28rpx;
}
.icon-shoucang{
  font-size: 40rpx;
}
.share{
  border-radius: 70rpx;
  height: 70rpx;
  width: 140rpx;
  line-height: 70rpx;
  padding: 0;
  background: #75adff;
  color: white;
}
.reply{
  background: rgb(233, 232, 232);
  border-radius: 10px;
  min-height: 68rpx;
  margin: 0 10rpx;
  padding:0 5px;
  text-align: left;
}
.delete{
  float: right;
  color: white;
  text-shadow: 0 0 5px black;
}

.box{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80%;
  box-shadow: 0 0 3px #000;
  padding: 40rpx 40rpx;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 5px;
}
.box view{
  text-align: center;
  border-bottom: 1px solid #c2c1c1;
}
.box view:last-child{
  border: none;
}

