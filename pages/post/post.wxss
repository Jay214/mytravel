/* pages/post/post.wxss */
.container{
  margin-bottom: 30px;
}
.answer{
  padding: 30rpx 0;
  border-bottom: 1px solid lightgrey;
}
.user{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.user image, .author image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.msg{
  font-size: 28rpx;
}
.answer_content{
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.tag{
  background: #5bce5a;
  font-size: 30rpx;
  color: white;
  border-radius: 3px;
  padding: 3px;
  margin: 4px;
}
.info{
  height: 160rpx;
  margin: 40rpx 0;
  font-size: 26rpx;
}
.delete{
  float: right;
  color: rgb(88, 88, 248);
}
.author{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  font-size: 32rpx;
}
.address{
  font-size: 32rpx;
  flex: 1;
  text-align: right;
}
.content{
  margin: 40rpx 0;
}
.comments{
  margin-bottom: 40px;
}



.tips{
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow:0px -4px 10px -4px #c2c1c1;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  padding: 16rpx 0;
  background: white;
}
.tab{
   flex: 1;
  text-align: center;
}
.tab:first-child{
  flex: 3;
}
.inner{
  font-size: 28rpx;
}
.icon-shoucang{
  font-size: 40rpx;
}
.share{
  border-radius: 70rpx;
  height: 70rpx;
  width: 140rpx;
  line-height: 70rpx;
  padding: 0;
  margin-right: 20rpx;
}
.reply{
  background: rgb(233, 232, 232);
  border-radius: 10px;
  min-height: 68rpx;
  margin: 0 10rpx;
  padding:0 5px;
  text-align: left;
}