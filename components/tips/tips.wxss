/* components/tips/tips.wxss */
.tips{
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow:0px -4px 10px -4px #c2c1c1;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  padding: 16rpx 0;
  background: white;
}
.tab{
  flex: 1;
  border-left: 1px solid lightgrey;
}
.tab:first-child{
  border: none;
}
.share{
  font-size: 26rpx;
  border-radius: 70rpx;
  height: 70rpx;
  width: 140rpx;
  line-height: 70rpx;
  padding: 0;
}